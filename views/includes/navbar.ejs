<style>
  .btn-search {
    background-color: #fe424d;
    color: #fff;
    border-radius: 23px;
    padding: 0 1rem 0 1rem;
  }

  .btn-search:hover {
    background-color: #e3212e;
    color: #fff;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.4rem;
  }

  .search-inp {
    border-radius: 23px;
    border: 1px solid grey;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }

  .search-inp:focus {
    border: 2px solid #fe424d;
    outline: none;
    box-shadow: 0 0.3px 3px rgba(254, 66, 77, 0.5);
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom">
  <div class="container-fluid">
    
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-brands fa-airbnb me-2 text-danger fs-3"></i>
      <span class="fw-bold text-danger">airbnb</span>
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" 
            data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- SEARCH BAR -->
      <div class="navbar-nav ms-auto">
        <form action="/listings" method="GET" class="d-flex" role="search">
          <input 
            type="search" 
            name="search" 
            class="form-control me-2 search-inp" 
            placeholder="Search destination"
            aria-label="Search"
          >
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <!-- RIGHT SIDE MENU -->
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>

        <% if (currentUser) { %>
          <a class="nav-link active" aria-current="page" href="/logout"><b>Logout</b></a>
        <% } else { %>
          <a class="nav-link active" aria-current="page" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/"><b>Login</b></a>
        <% } %>

      </div>

    </div>
  </div>
</nav>
