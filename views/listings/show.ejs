<%- layout('layouts/boilerplate') -%>

  <body class="bg-light">

    <div class="container py-5">

      <div class="row g-4">

        <div class="col-lg-7">
          <img src="<%= list.image.url %>" class="img-fluid rounded-4 w-100 mb-3"
            style="max-height: 500px; object-fit: cover;">
        </div>

        <div class="col-lg-5">
          <div class="card shadow-sm border-0 h-100">
            <div class="card-body p-4">

              <div class="d-flex justify-content-between align-items-start mb-3 flex-wrap">
                <h2 class="fw-bold fs-3 text-dark">
                  <%= list.title %>
                </h2>
                <span class="fs-4 fw-bold text-danger">
                  <i class="fa-solid fa-indian-rupee-sign small me-1"></i>
                  <%= list.price.toLocaleString("en-IN") %>
                </span>
              </div>

              <div class="mb-4 text-muted border-bottom pb-3">
                <i class="fa-solid fa-location-dot me-2 text-primary"></i>
                <span class="fw-semibold">
                  <%= list.location %>
                </span>,
                <%= list.country %>
              </div>

              <div class="mb-4">
                <h5 class="fw-semibold text-primary mb-2">About this listing</h5>

                <p class="text-secondary">
                  <strong>Hosted by:</strong>
                  <i>
                    <%= list.owner?.username || "Unknown Owner" %>
                  </i>
                </p>

                <p class="text-secondary">
                  <%= list.description %>
                </p>
              </div>

              <hr>

              <% if (currentUser && list.owner && list.owner._id.equals(currentUser._id)) { %>
                <div class="d-flex gap-3 flex-wrap pt-3">
                  <a href="/listings/<%= list._id %>/edit" class="btn btn-primary flex-grow-1">
                    <i class="fa-solid fa-pen-to-square me-1"></i> Edit
                  </a>
                  <form method="POST" action="/listings/<%= list._id %>?_method=DELETE" class="flex-grow-1">
                    <button type="submit" class="btn btn-danger w-100">
                      <i class="fa-solid fa-trash me-1"></i> Delete
                    </button>
                  </form>
                </div>
                <% } %>

            </div>
          </div>
        </div>

      </div>

      <!-- REVIEW SECTION -->

      <div class="row mt-5">
        <div class="col-lg-10 mx-auto">

          <% if (currentUser) { %>

            <div class="card border-0 shadow-sm rounded-4 mb-5">
              <div class="card-body p-4">

                <h4 class="fw-bold text-primary mb-4 text-center">
                  <i class="fa-solid fa-star text-warning me-2"></i>Leave a Review
                </h4>

                <form action="/listings/<%= list._id %>/reviews" method="POST">

                  <div class="row g-4 align-items-stretch">

                    <div class="col-md-4 d-flex flex-column justify-content-center border-end">
                      <label class="form-label fw-semibold">Your Rating (1â€“5)</label>
                      <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                          aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" required />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" required />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" required />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" required />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" required />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                      </fieldset>
                    </div>

                    <div class="col-md-8">
                      <label class="form-label fw-semibold">Your Comment</label>
                      <textarea class="form-control" rows="4" name="review[comment]"
                        placeholder="Write your thoughts..." required></textarea>

                      <button type="submit" class="btn btn-success w-100 mt-3">
                        <i class="fa-solid fa-paper-plane me-1"></i> Submit Review
                      </button>
                    </div>

                  </div>

                </form>

              </div>
            </div>

            <% } else { %>

              <div class="d-flex justify-content-center">
                <div class="px-4 py-3 rounded-4 shadow-sm bg-white border text-center" style="max-width: 450px;">
                  <i class="fa-solid fa-lock text-danger me-2"></i>
                  <span class="text-muted">
                    Please
                    <a href="/" class="fw-bold text-decoration-none text-danger">
                      login
                    </a>
                    to leave a review.
                  </span>
                </div>
              </div>
              <br>

              <% } %>
                <h4 class="fw-bold text-primary text-center mb-4">
                  <i class="fa-solid fa-comments me-2 text-warning"></i> What People Say
                </h4>

                <% if (list.reviews.length> 0) { %>

                  <div class="row g-4">
                    <% list.reviews.forEach(rev=> { %>

                      <div class="col-md-6">
                        <div class="card shadow-sm border-0 h-100 rounded-4 review-card">
                          <div class="card-body p-4">

                            <div class="d-flex justify-content-between align-items-center mb-3">

                              <div>
                                <i class="fa-solid fa-user-circle text-secondary me-2 fs-4"></i>
                                <span class="fw-semibold">
                                  <%= rev.author?.username || "Anonymous" %>
                                </span>
                              </div>

                              <div>
                                <% for (let i=0; i < rev.rating; i++) { %>
                                  <i class="fa-solid fa-star text-warning"></i>
                                  <% } %>
                                    <% for (let i=rev.rating; i < 5; i++) { %>
                                      <i class="fa-regular fa-star text-muted"></i>
                                      <% } %>
                              </div>

                            </div>

                            <p class="text-secondary mb-3 fst-italic">
                              "<%= rev.comment %>"
                            </p>

                            <div class="d-flex justify-content-between align-items-center">
                              <small class="text-muted">
                                Posted on <%= rev.createdAt?.toDateString() %>
                              </small>

                              <% if (currentUser && rev.author && rev.author._id.equals(currentUser._id)) { %>
                                <form action="/listings/<%= list._id %>/reviews/<%= rev._id %>?_method=DELETE"
                                  method="POST">
                                  <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="fa-solid fa-trash"></i> Delete
                                  </button>
                                </form>
                                <% } %>

                            </div>

                          </div>
                        </div>
                      </div>

                      <% }) %>
                  </div>

                  <% } else { %>

                    <p class="text-center text-muted fst-italic">No reviews yet.</p>

                    <% } %>

        <!-- MAP SECTION -->
        </div>
        <div class="row mt-5">
          <div class="col-lg-10 mx-auto">
            <h3 class="fw-bold text-primary mb-4 text-center">
              <i class="fa-solid fa-map-location-dot me-2"></i> Location on Map
            </h3>
            <div id="map" class="shadow-sm"></div>
          </div>
          <div class="w-100 d-flex justify-content-center my-5">
            <iframe width="80%" height="500" style="border-radius: 1rem; border:0;" loading="lazy" allowfullscreen
              referrerpolicy="no-referrer-when-downgrade"
              src="https://www.google.com/maps?&q=<%= encodeURIComponent(list.location + ',' + list.country) %>&output=embed&z=15">
            </iframe>
          </div>

        </div>
      </div>

    </div>


  </body>