<%- layout('layouts/boilerplate') -%>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      padding: 1rem 0;
      background-color: #fff;
      border-bottom: 1px solid #ddd;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .filter {
      text-align: center;
      color: #484848;
      opacity: 0.7;
      transition: all 0.2s ease-in-out;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-decoration: none;
      cursor: pointer;
      padding-top: 0.5rem;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
      white-space: nowrap;
    }

    .filter p {
      font-size: 0.8rem;
      margin: 0.4rem 0 0 0;
      font-weight: 500;
    }

    .filter i {
      font-size: 1.7rem;
      margin-bottom: 0.2rem;
    }

    .filter:hover {
      opacity: 1;
      color: #2d2e30;
    }

    .filter.active-filter {
      opacity: 1;
      color: #FF385C;
      border-bottom: 2px solid #FF385C;
    }

    .empty-message-container {
      min-height: 50vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .tax-toggle {
      display: flex;
      align-items: center;
      margin-left: 1rem;
    }

    .tax-switch {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      user-select: none;
      font-size: 0.85rem;
      color: #555;
    }

    .tax-switch input {
      display: none;
    }

    .tax-switch .slider {
      width: 38px;
      height: 20px;
      background-color: #ccc;
      border-radius: 20px;
      position: relative;
      transition: 0.3s;
    }

    .tax-switch .slider::before {
      content: "";
      width: 16px;
      height: 16px;
      background: white;
      border-radius: 50%;
      position: absolute;
      top: 2px;
      left: 2px;
      transition: 0.3s;
    }

    .tax-switch input:checked+.slider {
      background-color: #ff385c;
    }

    .tax-switch input:checked+.slider::before {
      transform: translateX(18px);
    }

    .tax-switch .switch-text {
      font-weight: 500;
      color: #333;
      margin-left: 4px;
    }
  </style>

  <body>

    <div id="filters">
      <a href="/listings" class="filter ">
        <div><i class="fa-solid fa-globe"></i></div>
        <p>All</p>
      </a>

      <a href="/listings/category/trending" class="filter <%= category === 'trending' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>

      <a href="/listings/category/rooms" class="filter <%= category === 'rooms' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>

      <a href="/listings/category/city" class="filter <%= category === 'city' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </a>

      <a href="/listings/category/mountains" class="filter <%= category === 'mountains' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>

      <a href="/listings/category/castles" class="filter <%= category === 'castles' ? 'active-filter' : '' %>">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </a>

      <a href="/listings/category/pools" class="filter <%= category === 'pools' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>

      <a href="/listings/category/camp" class="filter <%= category === 'camp' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </a>

      <a href="/listings/category/farm" class="filter <%= category === 'farm' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farming</p>
      </a>

      <a href="/listings/category/arctic" class="filter <%= category === 'arctic' ? 'active-filter' : '' %>">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
      <div class="tax-toggle">
        <label class="tax-switch">
          <input type="checkbox" id="flexSwitchCheckDefault">
          <span class="slider"></span>
          <span class="switch-text">Apply Tax</span>
        </label>
      </div>
    </div>

    <% if(allListings.length===0) { %>
      <div class="empty-message-container">
        <h4 class="text-center text-muted">No listings found in this category.</h4>
      </div>
      <% } else { %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
          <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
              <div class="card mb-4">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                <div class="card-body">
                  <p class="card-text">
                    <b>
                      <%= listing.title %>
                    </b><br>
                    â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
                      <i class="tax-info">&nbsp; &nbsp; + 18% GST </i>
                  </p>
                </div>
              </div>
            </a>
            <% } %>
        </div>
        <% } %>
  </body>

  <script>
    let taxBtn = document.getElementById("flexSwitchCheckDefault");
    taxBtn.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
        info.style.display = (info.style.display === "inline" ? "none" : "inline");
      }
    });

  </script>