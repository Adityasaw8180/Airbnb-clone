<%- layout('layouts/boilerplate') -%>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2rem;
      padding: 1rem 0;
      background-color: #fff;
      border-bottom: 1px solid #ddd;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .filter {
      text-align: center;
      color: #484848;
      opacity: 0.7;
      transition: all 0.2s ease-in-out;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-decoration: none;
      cursor: pointer;
      padding-top: 0.5rem;
      padding-left: 0.5rem;
      padding-right: 0.5rem;
      white-space: nowrap;
    }

    .filter p {
      font-size: 0.8rem;
      margin: 0.4rem 0 0 0;
      font-weight: 500;
    }

    .filter i {
      font-size: 1.7rem;
      margin-bottom: 0.2rem;
    }

    .filter:hover {
      opacity: 1;
      color: #2d2e30;
    }

    .filter.active-filter {
      opacity: 1;
      color: #FF385C;
      border-bottom: 2px solid #FF385C;
    }
    
    /* NEW CSS for vertical centering if needed, but not strictly required
       if Bootstrap utility classes below are sufficient. */
    .empty-message-container {
        /* This wrapper ensures the message takes up space below the filters */
        min-height: 50vh; 
        display: flex;
        justify-content: center;
        align-items: center;
    }

  </style>

  <body>

    <div id="filters">
      <a href="/listings" class="filter ">
        <div><i class="fa-solid fa-globe"></i></div>
        <p>All</p>
      </a>

      <a href="/listings/category/trending" class="filter <%= category === 'trending' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </a>

      <a href="/listings/category/rooms" class="filter <%= category === 'rooms' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </a>

      <a href="/listings/category/city" class="filter <%= category === 'city' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </a>

      <a href="/listings/category/mountains" class="filter <%= category === 'mountains' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </a>

      <a href="/listings/category/castles" class="filter <%= category === 'castles' ? 'active-filter' : '' %>">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </a>

      <a href="/listings/category/pools" class="filter <%= category === 'pools' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </a>

      <a href="/listings/category/camp" class="filter <%= category === 'camp' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </a>

      <a href="/listings/category/farm" class="filter <%= category === 'farm' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farming</p>
      </a>

      <a href="/listings/category/arctic" class="filter <%= category === 'arctic' ? 'active-filter' : '' %>">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </a>
    </div>

    <% if(allListings.length===0) { %>
      <div class="empty-message-container">
        <h4 class="text-center text-muted">No listings found in this category.</h4>
      </div>
    <% } else { %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of allListings) { %>
          <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card mb-4">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
              <div class="card-body">
                <p class="card-text">
                  <b>
                    <%= listing.title %>
                  </b><br>
                  â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night <br>
                </p>
              </div>
            </div>
          </a>
        <% } %>
      </div>
    <% } %>
  </body>