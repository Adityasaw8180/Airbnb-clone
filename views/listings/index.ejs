<%- layout('layouts/boilerplate') -%>

  <style>
    :root {
      --airbnb-red: #ff385c;
      --text-color: #222222;
      --light-gray: #ddd;
      --dark-gray: #484848;
    }

    #filters-outer {
      position: sticky;
      top: 0;
      z-index: 1000;
      background-color: #fff;
      border-bottom: 1px solid var(--light-gray);
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
      padding: 0.5rem 0;
      display: flex;
      align-items: center;
    }

    #filters {
      display: flex;
      flex-wrap: nowrap;
      gap: 2rem;
      padding: 0 1rem;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      flex-grow: 1;
    }

    #filters::-webkit-scrollbar {
      display: none;
    }

    /* --- Individual Filter Item Styling --- */
    .filter {
      text-align: center;
      color: var(--dark-gray);
      opacity: 0.7;
      transition: all 0.2s ease-in-out;
      display: flex;
      flex-direction: column;
      align-items: center;
      text-decoration: none;
      cursor: pointer;
      padding: 0.5rem 0.5rem 0;
      white-space: nowrap;
      flex-shrink: 0;
    }

    .filter p {
      font-size: 0.75rem;
      margin: 0.4rem 0 0 0;
      font-weight: 500;
    }

    .filter i {
      font-size: 1.5rem;
      margin-bottom: 0.2rem;
    }

    .filter:hover {
      opacity: 1;
      color: var(--text-color);
    }

    .filter.active-filter {
      opacity: 1;
      color: var(--airbnb-red);
      border-bottom: 2px solid var(--airbnb-red);
    }

    .tax-toggle-wrapper {
      flex-shrink: 0;
      margin-right: 1rem;
      display: flex;
      align-items: center;
    }

    .tax-toggle {
      border: 1px solid var(--light-gray);
      border-radius: 0.75rem;
      height: 3.25rem;
      padding: 0 1rem;
      display: flex;
      align-items: center;
      transition: box-shadow 0.2s;
    }

    .tax-toggle:hover {
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
    }

    .tax-switch {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      cursor: pointer;
      user-select: none;
      font-size: 0.85rem;
      color: #555;
    }

    .tax-switch input {
      display: none;
    }

    .tax-switch .slider {
      width: 38px;
      height: 20px;
      background-color: #ccc;
      border-radius: 20px;
      position: relative;
      transition: 0.3s;
    }

    .tax-switch .slider::before {
      content: "";
      width: 16px;
      height: 16px;
      background: white;
      border-radius: 50%;
      position: absolute;
      top: 2px;
      left: 2px;
      transition: 0.3s;
    }

    .tax-switch input:checked+.slider {
      background-color: var(--airbnb-red);
    }

    .tax-switch input:checked+.slider::before {
      transform: translateX(18px);
    }

    .tax-switch .switch-text {
      font-weight: 500;
      color: #333;
      margin-left: 4px;
      white-space: nowrap;
    }

    .empty-message-container {
      min-height: 50vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .tax-info {
      display: none;
      font-style: normal;
      font-size: 0.85rem;
      color: #717171;
    }

    .listing-link {
      text-decoration: none;
      color: inherit;
    }

    .card-img-top {
      object-fit: cover;
      border-radius: 0.75rem !important;
      transition: transform 0.3s ease-in-out;
    }

    .card {
      border: none !important;
    }

    .card-body {
      padding-left: 0;
    }

    .card:hover .card-img-top {
      transform: scale(1.02);
    }
  </style>

  <body>

    <div id="filters-outer" class="container-fluid d-flex">
      <div id="filters">
        <a href="/listings" class="filter <%= category === 'all' || !category ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-earth-americas"></i></div>
          <p>All</p>
        </a>

        <a href="/listings/category/trending" class="filter <%= category === 'trending' ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </a>

        <a href="/listings/category/rooms" class="filter <%= category === 'rooms' ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-bed"></i></div>
          <p>Rooms</p>
        </a>

        <a href="/listings/category/city" class="filter <%= category === 'city' ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-mountain-city"></i></div>
          <p>Iconic Cities</p>
        </a>

        <a href="/listings/category/mountains" class="filter <%= category === 'mountains' ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-mountain"></i></div>
          <p>Mountains</p>
        </a>

        <a href="/listings/category/castles" class="filter <%= category === 'castles' ? 'active-filter' : '' %>">
          <div><i class="fa-brands fa-fort-awesome"></i></div>
          <p>Castles</p>
        </a>

        <a href="/listings/category/pools" class="filter <%= category === 'pools' ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-person-swimming"></i></div>
          <p>Amazing Pools</p>
        </a>

        <a href="/listings/category/camp" class="filter <%= category === 'camp' ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-campground"></i></div>
          <p>Camping</p>
        </a>

        <a href="/listings/category/farm" class="filter <%= category === 'farm' ? 'active-filter' : '' %>">
          <div><i class="fa-solid fa-cow"></i></div>
          <p>Farming</p>
        </a>

        <a href="/listings/category/arctic" class="filter <%= category === 'arctic' ? 'active-filter' : '' %>">
          <div><i class="fa-regular fa-snowflake"></i></div>
          <p>Arctic</p>
        </a>

         <a href="/listings/category/premium" class="filter <%= category === 'arctic' ? 'active-filter' : '' %>">
          <i class="fa-brands fa-web-awesome"></i>
          <p>Premium</p>
        </a>
      </div>

      <div class="tax-toggle-wrapper d-none d-lg-block">
        <div class="tax-toggle">
          <label class="tax-switch">
            <input type="checkbox" id="flexSwitchCheckDefault">
            <span class="slider"></span>
            <span class="switch-text">Display Taxes</span>
          </label>
        </div>
      </div>
    </div>

    <% if(allListings.length===0) { %>
      <div class="empty-message-container">
        <h4 class="text-center text-muted">No listings found in this category.</h4>
      </div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 mt-3">
          <% for(let listing of allListings) { %>
            <a href="/listings/<%= listing._id %>" class="col listing-link">
              <div class="card mb-4">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;">
                <div class="card-body">
                  <p class="card-text">
                    <b>
                      <%= listing.title %>
                    </b><br>
                    â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
                      <i class="tax-info">&nbsp;&nbsp; +
                        <%= Math.floor(Math.random() * (50 - 12 + 1)) + 12 %>% GST
                      </i>
                  </p>
                </div>
              </div>
            </a>
            <% } %>
        </div>
        <% } %>
  </body>

  <script>
    let taxBtn = document.getElementById("flexSwitchCheckDefault");
    let taxInfo = document.getElementsByClassName("tax-info");

    taxBtn.addEventListener("click", () => {
      let isChecked = taxBtn.checked;

      for (let info of taxInfo) {
        info.style.display = isChecked ? "inline" : "none";
      }
    });

  </script>