<% layout('layouts/boilerplate') -%>

<div class="container my-5 d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
  <div class="card border-0 shadow-lg text-center p-5" style="max-width: 600px; border-radius: 20px;">
    <div class="card-body">

      <!-- Airbnb style icon -->
      <div class="mb-4">
        <i class="bi bi-exclamation-triangle-fill" style="font-size: 4rem; color: #FF385C;"></i>
      </div>

      <!-- <h1 class="display-4 fw-bold mb-2" style="color: #FF385C;">
        <%= err.status || 500 %>
      </h1> -->

      <h2 class="h5 fw-semibold mb-3 text-dark">
        <%= err.message || "Something went wrong" %>
      </h2>

      <p class="text-muted mb-4">
        <%if(err.status === 404) { %>
          Oops! The page you’re looking for doesn’t exist.  <br>
        <% } else { %>
            Please try again later or contact support if the issue persists. <br>
        <% } %>
      </p>

      <a href="/listings" 
         class="btn btn-lg text-white px-4 py-2"
         style="background-color: #FF385C; border-radius: 30px;">
        <i class="bi bi-house-door-fill me-2"></i> Go Back Home
      </a>

    </div>
  </div>
</div>
